{
  "name": "telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot project",
  "main": "src/bot.js",
  "scripts": {
    "start": "ts-node src/functions/general.local.ts",
    "start:wordle": "ts-node src/functions/wordle.local.ts",
    "start:prod": "node dist/bot.js",
    "build": "rimraf dist && esbuild src/functions/general.lambda.ts --legal-comments=none --bundle --platform=node --target=node20 --minify --outfile=dist/lambda.js",
    "build:api": "rimraf dist && esbuild src/api/entrypoint/serverless.entrypoint.ts --legal-comments=none --bundle --platform=node --target=node20 --minify --outfile=dist/api.js",
    "build:conversation": "rimraf dist && esbuild src/functions/conversation.lambda.ts --legal-comments=none --bundle --platform=node --target=node20 --minify --outfile=dist/conversation.js",
    "deploy": "npm run build && bash ./scripts/deploy.sh synergysys-dev-lmb-ai-bot",
    "deploy:api": "npm run build:api && bash ./scripts/deploy.api.sh synergysys-dev-lmb-api",
    "deploy:conversation": "npm run build:conversation && bash ./scripts/deploy.conversation.sh synergysys-dev-lmb-conversation-handler",
    "clean": "rimraf dist",
    "prettier": "prettier --write src/**/*.ts",
    "test": "jest",
    "test:e2e": "jest --testMatch='**/*.e2e-spec.ts'"
  },
  "author": "Diego Maroto",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "@aws-sdk/client-dynamodb": "^3.602.0",
    "@aws-sdk/client-ses": "^3.614.0",
    "@aws-sdk/client-sqs": "^3.614.0",
    "axios": "^1.7.2",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "elevenlabs": "^0.8.2",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "serverless-http": "^3.2.0",
    "telegraf": "^4.16.3",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@jest/globals": "^29.7.0",
    "@types/babel__generator": "^7.6.8",
    "@types/babel__template": "^7.4.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.8",
    "@types/uuid": "^10.0.0",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.21.5",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  }
}
