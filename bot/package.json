{
  "name": "telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot project",
  "main": "src/bot.js",
  "scripts": {
    "start": "ts-node src/functions/general.local.ts",
    "start:wordle": "ts-node src/functions/wordle.local.ts",
    "start:prod": "node dist/bot.js",
    "build": "rimraf dist && esbuild src/lambda.ts --legal-comments=none --bundle --platform=node --target=node20 --minify --outfile=dist/lambda.js",
    "deploy": "npm run build && bash ./scripts/deploy.sh",
    "clean": "rimraf dist",
    "prettier": "prettier --write src/**/*.ts"
  },
  "author": "Diego Maroto",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "@aws-sdk/client-dynamodb": "^3.602.0",
    "dotenv": "^16.4.5",
    "serverless-http": "^3.2.0",
    "telegraf": "^4.16.3",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.8",
    "@types/uuid": "^10.0.0",
    "esbuild": "^0.21.5",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  }
}
